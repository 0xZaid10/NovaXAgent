{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",

    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "moduleResolution": "node",
    "types": ["node"],

    "skipLibCheck": true
  },

  "include": [
    "**/*.ts"
  ]
}
